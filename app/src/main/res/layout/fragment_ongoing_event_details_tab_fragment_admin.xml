<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_ongoing_event_details_tab_container"
    tools:context="prachi14075.iiitd.ac.in.sportsmanagementapp.fragmentAdmin.OngoingEventDetailsTabFragmentAdmin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:padding="@dimen/fragment_ongoing_event_details_tab_container_padding"
            app:cardElevation="3dp"
            app:cardCornerRadius="2dp"
            android:id="@+id/fragment_ongoing_event_details_tab_cardview">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:paddingTop="@dimen/item_ongoing_events_relative_layout_padding"
                android:id="@+id/fragment_ongoing_event_details_tab_relative_layout"
                android:padding="8dp"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/fragment_ongoing_event_details_tab_status_layout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:id="@+id/fragment_ongoing_event_details_tab_text_status"
                        android:text="Starts on "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:id="@+id/fragment_ongoing_event_details_tab_num_status"
                        android:text="19th March'17"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:layout_below="@id/fragment_ongoing_event_details_tab_status_layout"
                    android:id="@+id/fragment_ongoing_event_details_tab_location_layout">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:layout_weight="0.1"
                        android:layout_gravity="center"
                        android:id="@+id/fragment_ongoing_event_details_tab_location_logo"
                        android:src="@drawable/ic_location"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:id="@+id/fragment_ongoing_event_details_tab_location_name"
                        android:text="Tennis Court" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/fragment_ongoing_event_details_tab_categories_label"
                    android:text="Categories"
                    android:layout_below="@id/fragment_ongoing_event_details_tab_location_layout"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_ongoing_event_details_tab_recycler_view"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/fragment_ongoing_event_details_tab_categories_label">

                </android.support.v7.widget.RecyclerView>

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="18dp"-->
                <!--android:id="@+id/sport_details_registrations_close"-->
                <!--android:textColor="#000000  "-->
                <!--android:text="Registrations close on 9th March '17"-->
                <!--android:layout_marginLeft="16dp"-->
                <!--android:layout_marginTop="60dp"-->
                <!--android:layout_below="@id/sport_details_categories"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/fragment_ongoing_event_details_tab_buttons_linear_layout"
                    android:orientation="horizontal"
                    android:layout_below="@id/fragment_ongoing_event_details_tab_recycler_view">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="0.5"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/fragment_ongoing_event_details_tab_fixtures_button"
                        android:layout_marginTop="30dp"
                        android:text="Fixtures"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimary"/>


                </LinearLayout>

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:id="@+id/sport_details_best">-->

                <!--<ImageView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="24dp"-->
                <!--android:layout_weight="0.1"-->
                <!--android:id="@+id/sport_details_thumbs_icon"-->
                <!--android:src="@drawable/ic_call"/>-->

                <!--<TextView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="18dp"-->
                <!--android:layout_weight="0.8"-->
                <!--android:id="@+id/sport_details_allthebest"-->
                <!--android:textColor="@color/white"-->
                <!--android:text="All the best"/>-->

                <!--</LinearLayout>-->

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_ongoing_event_details_tab_cardview"
            app:cardElevation="3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_match"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="The next match is on 20th March 2017"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_below="@id/status_match"
                    android:id="@+id/fragment_ongoing_event_details_tab_location_layout2">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.1"
                        android:layout_gravity="center"
                        android:id="@+id/fragment_ongoing_event_details_tab_location_logo2"
                        android:src="@drawable/ic_location"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:id="@+id/fragment_ongoing_event_details_tab_location_name2"
                        android:text="Tennis Court" />

                </LinearLayout>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_centerHorizontal="true"
                    android:text="Rechedule"
                    android:id="@+id/reschedule_btn"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_below="@id/fragment_ongoing_event_details_tab_location_layout2"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


</FrameLayout>
