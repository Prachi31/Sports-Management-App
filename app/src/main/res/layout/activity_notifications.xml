<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_notifications_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="prachi14075.iiitd.ac.in.sportsmanagementapp.activity.NotificationsActivity">

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/toolbar_layout"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:id="@+id/card1">

        <RelativeLayout
            android:id="@+id/activity_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@id/toolbar">

            <TextView
                android:text="Reschedule!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textStyle="bold"
                android:textSize="18dp" />

            <TextView
                android:text="Team ABC has requested a reschedule"
                android:textColor="#FD5454"
                android:layout_below="@id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/textView2"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linear1"
                android:layout_marginTop="8dp"
                android:layout_below="@id/textView2">

                <TextView
                    android:text="Previous Date:             17 March 2017"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="17dp"
                    android:id="@+id/textView4" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">
                        <TextView
                            android:text="Proposed Dates: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView13"
                            android:layout_weight="1"
                            android:textColor="#000000"/>

                        <TextView
                            android:text="18 March 2017"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView14"
                            android:layout_weight="1"
                            android:textColor="#000000"/>

                        <Button
                            android:text="Accept"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:id="@+id/button6"
                            android:layout_weight="1"
                            android:background="#FD5454"
                            android:textColor="#FFFFFF"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">
                        <TextView
                            android:text="Proposed Dates: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:text="18 March 2017"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView12"
                            android:layout_weight="1"
                            android:textColor="#000000"/>

                        <Button
                            android:text="Accept"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:id="@+id/button5"
                            android:layout_weight="1"
                            android:background="#FD5454"
                            android:textColor="#FFFFFF"
                            android:maxHeight="30dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_alignTop="@+id/textView4"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">

                        <TextView
                            android:text="Proposed Dates: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:text="18 March 2017"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:layout_weight="1"
                            android:textColor="#000000"/>

                        <Button
                            android:text="Accept"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:id="@+id/button4"
                            android:layout_weight="1"
                            android:background="#FD5454"
                            android:textColor="#FFFFFF"
                            android:maxHeight="30dp"/>
                    </LinearLayout>

                    <Button
                        android:text="Decline"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:id="@+id/button7"
                        android:background="#FD5454"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center" />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:text="1 hour ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/textView15"
                android:textSize="12sp"
                android:textColor="#000000"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1"
        android:elevation="2dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/re">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="Match Today!"
                    android:textStyle="bold"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:text="3 hours ago"/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/re"
                android:layout_marginTop="5dp"
                android:id="@+id/res"
                android:text="You have a match today at 5 PM"/>

            <Button
                android:text="Reschedule"
                android:layout_below="@id/res"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="#FD5454"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_gravity="center" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
