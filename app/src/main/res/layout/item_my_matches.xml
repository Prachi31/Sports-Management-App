<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_my_matches_card_view"
    android:layout_width="match_parent"
    android:elevation="2dp"
    android:layout_height="85dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.025"
            android:orientation="vertical"
            android:id="@+id/item_my_matches_team_one_color_layout"
            android:layout_height="match_parent">

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/grey_light"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/item_my_matches_team_layout"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Team ABC"
                    android:layout_weight="0.45"
                    android:gravity="end"
                    android:id="@+id/item_my_matches_team_one_name"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="vs"
                    android:id="@+id/item_my_matches_vs_label"
                    android:textSize="14dp"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:gravity="start"
                    android:text="Team XYZ"
                    android:textSize="16dp"
                    android:id="@+id/item_my_matches_team_two_name" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_my_matches_team_layout"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/item_my_matches_time"
                android:textColor="@color/colorPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/item_my_matches_score_layout"
                android:layout_below="@id/item_my_matches_team_layout"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:gravity="end"
                    android:text="5"
                    android:id="@+id/item_my_matches_score_team_one"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:text="-"
                    android:gravity="center"
                    android:id="@+id/item_my_matches_score_hyphen"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:text="6"
                    android:id="@+id/item_my_matches_score_team_two"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_my_matches_score_layout"
                android:id="@+id/item_my_matches_date"
                android:layout_alignParentEnd="true"
                android:text="13/06/17"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/grey_light"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.025"
            android:layout_height="match_parent"
            android:id="@+id/item_my_matches_team_two_color_layout"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
