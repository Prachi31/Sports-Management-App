<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_upcoming_event_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="prachi14075.iiitd.ac.in.sportsmanagementapp.activity.UpcomingEventDetailsActivity">

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/toolbar_layout"/>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:id="@+id/activity_upcoming_event_details_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.astuetz.PagerSlidingTabStrip
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_upcoming_event_details_toolbar_tabs_height"
            android:id="@+id/activity_upcoming_event_details_toolbar_tabs"
            app:pstsShouldExpand="true"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_upcoming_event_details_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_upcoming_event_details_toolbar"/>

</RelativeLayout>
